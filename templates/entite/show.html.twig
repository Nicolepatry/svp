{% extends 'base.html.twig' %}

{% block title  'Find all the best entite '%}
  
{% block body %}
	<h1 class="titleShow">Entreprise {{ nom }}</h1>
  <p class="back">

          <br>
          <a href="{{ path('app_entite') }}" class="backToList">
             Liste des Entreprises
          </a>
       </p>
	<table class="table table-borderless table-striped table-bordered">
            <tbody class="table table-borderless table-striped table-bordered">
              <tr>
                  <th>
                    ID
                  </th>
                  <td>
                    {{id}}
                  </td>
              </tr>

            	<tr>
               		<th>
               	 		Nom
               	 	</th>
                 	<td>
                 		{{ nom }}
                	</td>
            	</tr>

            	<tr>
               		<th>
               	 		Numero RCM ou Numero d declaration
               	 	</th>
                 	<td>
                 		{{ numero}}
                	</td>
            	</tr>

            	<tr>
               		<th>
               	 		Nombre de Succursale
               	 	</th>
                 	<td>
                 		{{ nbsucc }}
                	</td>
            	</tr>
            	
            	<tr>
               		<th>
               	 		Type d'Entreprise
               	 	</th>
                 	<td>
                 		{{ etatentite }}
                	</td>
            	</tr>
            	
            	<tr>
               		<th>
               	 		RaisonSociale
               	 	</th>
                 	<td>
                 		{{ rsoc }}
                	 </td>
            	</tr>

            	<tr>
               		<th>
               	 		siege
               	 	</th>
                 	<td>
                 		{{ siege }}
                	</td>
            	</tr>
            </tbody>
        </table>

   		 <div class="btn-group">
           			 <a href="{{ path('app_entite_edit', {'id': id}) }}" class="btn btn-outline-primary buttonNote btn-lg">
               			 Modifier
           			 </a>
      		
        
           		  <form method="post" action="{{ path('app_entite_delete', {'id': id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
                    <button class="btn btn-outline-danger buttonNote btn-lg">
                      Supprimer
                    </button>
                </form>
                 <a href="{{ path('app_succursale_create', {'id_entite' :id})}}" class="btn btn-outline-primary buttonNote btn-lg">
                     Enregistrer Succursale
                 </a>
          

   		 </div>

   		 <br>

   		 

       <div class="btn-group btn-block">
            <!--<button class="btn btn-outline-primary">
                 <a class="collapse-item" href="" class="styleButtonModifier">
                     Gérer Succursale
                 </a>
            </button>-->

            <table class="table table-borderless table-striped fl-table table-bordered fl-table">
              <thead class="table-primary">
              <tr class="bg-info">
                  {# <th>Id</th> #}
                  <th>Nom Succursale </th>
                  <th>Quartier </th>
                  <th>Nombre d'employés </th>
                  <th>Arrondissement </th>
                  <th>Ville </th>
              </tr>
          </thead>
          <tbody >
          {% for s in succursales %}
              <tr>
                  <td>{{ s.libellelibelle }}</td>
                  <td>{{ s.quartier }}</td>
                  <td>{{ s.NbreEmployer }}</td>
                  <td>{{ s.arrondissement }}</td>
                  <td>{{ s.ville }}</td>
                  <td>  
                            <a href="{{ path('app_succursale_show', {'id': s.id}) }}" class="btn-group btn-block btn btn-outline-primary btn btn-success"> Voir </a>               
                </td>
              </tr>
          {% else %}
              <tr>
                  <td colspan="3">Aucun enregistrement trouvé</td>
              </tr>
          {% endfor %}
          </tbody>
      </table>
       </div>

    
{% endblock %}
