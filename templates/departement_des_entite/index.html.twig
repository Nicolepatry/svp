
{% extends 'base.html.twig' %}

{% block title %}Entite index{% endblock %}

{% block body %}
    <h1 class="titleIndex">Listes des Departement des entites</h1>
    <div class="buttonCreated" style="text-align: right;">
        <button class="btn btn-outline-primary">
           {# <a href="{{ path('') }}" title="" class="styleButtonCreated">
                Créer un Succursale
            </a>#}
        </button>
    <table class="table table-borderless table-striped table-bordered">
            <thead class="table-primary">
            <tr class="bg-info">
                {# <th>Id</th> #}
                <th>Nom deu departement </th>
                <th>Nombre d'employer' </th>
                {#<th>Nom du chef de departement</th>#}
                <th>Succursale</th>
            </tr>
        </thead>
        <tbody >
        {% for d in departementdesentite %}
            <tr>
                {# <td>{{ succursale.id }}</td> #}
                <td>{{ d.libelle }}</td>
                <td>{{ d.NbreEmployer}}</td>
                {#<td>{{ d.chefdep }}</td>#}
                <td>{{ d.succursale }}</td>
                <td>
                    <div class="btn-group btn-block">
                        <button class="btn btn-outline-primary">
                            <a href="{{ path('app_succursale_show', {'id': succursale.id}) }}" class="btn btn-success"> Voir </a>
                        </button>
                         <button class="btn btn-outline-primary">
                            <a href="{{ path('app_succursale_edit', {'id': succursale.id}) }}" class="buttonAction"> Modifier </a>
                        </button>
                    </div>                  
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

